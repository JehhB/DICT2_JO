{% extends 'base.twig' %}
{% block head %}
<title>ADMIN | Accounts</title>
<link rel="stylesheet" href="../styles/accounts.css">
{% endblock %}
{% block header %}
<top-bar admin active="accounts"></top-bar>
{% endblock %}
{% block body %}

<div class="c-modal-container">
  <a href="#modal" class="c-modal-btn">Add Account</a>
  <div id="modal" class="c-modal">
    <div class="c-modal-content">
      <a href="#" class="c-close">&times;</a>
      <h2 class="c-modal-title">Register</h2>
      <form class="c-form" method="post" action="/admin/accounts.php">
        <label for="name" class="c-modal-label-name">Name:</label>
        <select name="focal_person" class="c-modal-dropdown">
          {% for option in options %}
            <option value="{{ option }}">{{ option }}</option>
          {% endfor %}
        </select>
        <label for="email" class="c-modal-label-name">Email</label>
        <input class="c-modal-input" type="email" id="email" name="email" value="{{acc.email}}" required>
        <label for="password" class="c-modal-label-name">Password:</label>
        <input
          class="c-modal-input"
          type="password"
          id="password"
          name="password_hash"
          value="{{acc.password_hash}}"
          required
        >
        <button class="c-modal-submit" type="submit">Register</button>
      </form>
    </div>
  </div>
  <div class="c-modal-overlay"></div>
</div>
<div class="table-container-3">
  <div class="table-container">
    <div class="table-container-2">
      <table class="teybol">
        <thead>
          <tr>
            <th>Account Name</th>
            <th>Session Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {% for acc in account %}
            <tr>
              <td data-label="Account Name">{{ acc.name }}</td>
              <td
                data-label="Session Status"
                class="{% if acc.current_session_id is null %}status-offline{% else %}status-active{% endif %}"
              >
                {% if acc.current_session_id is null %}
                  Offline
                {% else %}
                  Active
                {% endif %}
              </td>
              <td data-label="Action" class="action-table">
                <a href="/admin/delete_user.php?id={{ acc.account_id }}" class="delete-button">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                    <path fill="#ffffff" d="M170.5 51.6L151.5 80h145l-19-28.4c-1.5-2.2-4-3.6-6.7-3.6H177.1c-2.7 0-5.2 1.3-6.7 3.6zm147-26.6L354.2 80H368h48 8c13.3 0 24 10.7 24 24s-10.7 24-24 24h-8V432c0 44.2-35.8 80-80 80H112c-44.2 0-80-35.8-80-80V128H24c-13.3 0-24-10.7-24-24S10.7 80 24 80h8H80 93.8l36.7-55.1C140.9 9.4 158.4 0 177.1 0h93.7c18.7 0 36.2 9.4 46.6 24.9zM80 128V432c0 17.7 14.3 32 32 32H336c17.7 0 32-14.3 32-32V128H80zm80 64V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16z" />
                  </svg>
                </a>
                <button class="reset-button">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path fill="#ffffff" d="M463.5 224H472c13.3 0 24-10.7 24-24V72c0-9.7-5.8-18.5-14.8-22.2s-19.3-1.7-26.2 5.2L413.4 96.6c-87.6-86.5-228.7-86.2-315.8 1c-87.5 87.5-87.5 229.3 0 316.8s229.3 87.5 316.8 0c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0c-62.5 62.5-163.8 62.5-226.3 0s-62.5-163.8 0-226.3c62.2-62.2 162.7-62.5 225.3-1L327 183c-6.9 6.9-8.9 17.2-5.2 26.2s12.5 14.8 22.2 14.8H463.5z"/>
                  </svg>
                </button>
                <a href="/admin/logout-user.php?id={{ acc.current_session_id }}" class="out-button">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path fill="#ffffff" d="M502.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-128-128c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224 192 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l210.7 0-73.4 73.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l128-128zM160 96c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 32C43 32 0 75 0 128L0 384c0 53 43 96 96 96l64 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l64 0z"/>
                  </svg>
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
