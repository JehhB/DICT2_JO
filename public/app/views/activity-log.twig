{% extends 'base.twig' %}
{% block head %}
<title>ADMIN | Activities</title>
<link rel="stylesheet" href="../styles/admin_index.css">
{% endblock %}
{% block header %}
<top-bar admin active="activities"></top-bar>
{% endblock %}
{% block body %}
<div class="table-container-3">
  <div class="table-container">
    <div class="table-container-2">
      <table class="teybol">
        <thead>
          <tr>
            <th>Name</th>
            <th>Log in Time</th>
            <th>Log out Time</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        {% for ses in session %}
          <tr>
            <td data-label="Name">
            {{ ses.name | default("Admin")}}</td>
            <td data-label="Log in Time">{{ ses.login | date("M d, Y H:m ", "Asia/Manila") }}</td>
            <td data-label="Log out Time">
            {% if ses.logout is null %}
            Still Logged In
            {% else %}
            {{ ses.logout | date("M d, Y H:m", "Asia/Manila") }}
            {% endif %}
            </td>
           
            <td data-label="Action">
              <a href="#" class="logout-action">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                  <path class="svg-path" fill="#ffffff" d="M502.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-128-128c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224 192 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l210.7 0-73.4 73.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l128-128zM160 96c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 32C43 32 0 75 0 128L0 384c0 53 43 96 96 96l64 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l64 0z" />
                </svg>
              </a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
