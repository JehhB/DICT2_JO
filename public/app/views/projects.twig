{% extends 'base.twig' %}
{% block head %}
<title>ADMIN | Projects</title>
<link rel="stylesheet" href="..\styles\projects.css">
{% endblock %}
{% block header %}
 {% include 'nav-bar.twig'%}
{% endblock %}
{% block body %}

<div class="modal fade" id="EditBackDrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Project</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <form method="post" action="/admin/edit_project.php">
        <label for="name" class="form-label">Focal Person: </label>
         <select name="focal_person" class="form-select mb-3" id="focal_input">
          {% for option in options %}
            <option value="{{ option }}">{{ option }}</option>
          {% endfor %}
        </select>
        <label for="project_code" class="form-label">Short Code: </label>
        <input type="text" class="form-control mb-3" aria-label="code" aria-describedby="addon-wrapping" id="edit-project-code" name="project_code">
        <label for="project_name" class="form-label">Project Name: </label>
        <input type="text" class="form-control mb-3" aria-label="project_name" aria-describedby="addon-wrapping" id="edit-project-name" name="project_name">
        <label class="form-label" for="logo">Upload</label>
        <input type="file" class="form-control" id="edit-logo" name="project_logo">
      
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save Project</button>
      </div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" id="AddBackDrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Project</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <form method="post" action="/admin/projects.php">
        <label for="name" class="form-label">Focal Person: </label>
         <select name="focal_person" class="form-select mb-3">
          {% for option in options %}
            <option value="{{ option }}">{{ option }}</option>
          {% endfor %}
        </select>
        <label for="project_code" class="form-label">Short Code: </label>
        <input type="text" class="form-control mb-3" aria-label="code" aria-describedby="addon-wrapping" id="project_code" name="project_code">
        <label for="project_name" class="form-label">Project Name: </label>
        <input type="text" class="form-control mb-3" aria-label="name" aria-describedby="addon-wrapping" id="project_name" name="project_name">
        <label class="form-label" for="logo">Upload</label>
        <input type="file" class="form-control" id="logo" name="project_logo">
      
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Add Project</button>
      </div>
      </form>
    </div>
  </div>
</div>


  <div class="container  mt-5">
    <div class="col col-md-8 col-lg-6 table-responsive mx-auto">
     <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#AddBackDrop">
        Add Project
      </button>
      <table class="table table-light border table-hover  table-striped ">
        <thead>
          <tr>
            <th>Short Code</th>
            <th>Project Name</th>
            <th>Icon</th>
            <th>Focal Person</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
        {% for proj in project %}
          <tr>
            <td data-label="Short Code">{{ proj.project_code }}</td>
            <td data-label="Project Name">{{ proj.project_name }}</td>
            <td data-label="Icon">
             {% if proj.project_logo is not empty %}
              <img class="td-icon" src="{{ proj.project_logo }}" alt="icon"></td>
            {% else %}
            <img class="td-icon" src="/storage/default.png" alt="icon"></td>
            {% endif %}
            <td data-label="Focal Person">{{ proj.name }}</td>
            <td data-label="Action">
              <div class="d-flex flex-no-wrap gap-1" >
              <a href='#' onclick="setProjectId({{ proj.project_id }})" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#EditBackDrop">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="tw-h-4 tw-w-4">
               <path fill="#ffffff" d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
                 </svg>
                  </a>
              <a href ="/admin/delete_project.php?id={{ proj.project_id }}" class="btn btn-sm btn-danger" >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="tw-h-4 tw-w-4">
                  <path fill="#ffffff" d="M170.5 51.6L151.5 80h145l-19-28.4c-1.5-2.2-4-3.6-6.7-3.6H177.1c-2.7 0-5.2 1.3-6.7 3.6zm147-26.6L354.2 80H368h48 8c13.3 0 24 10.7 24 24s-10.7 24-24 24h-8V432c0 44.2-35.8 80-80 80H112c-44.2 0-80-35.8-80-80V128H24c-13.3 0-24-10.7-24-24S10.7 80 24 80h8H80 93.8l36.7-55.1C140.9 9.4 158.4 0 177.1 0h93.7c18.7 0 36.2 9.4 46.6 24.9zM80 128V432c0 17.7 14.3 32 32 32H336c17.7 0 32-14.3 32-32V128H80zm80 64V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16z" />
                </svg>
              </a>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

<script>

    function setProjectId(project_id) {
        

        document.getElementById('edit-project-id').value = project_id;
    }
</script>

{% endblock %}
