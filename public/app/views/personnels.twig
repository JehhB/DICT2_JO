{% extends 'base.twig' %}
{% block head %}
<title>ADMIN | Personnels</title>
{% endblock %}
{% block header %}
 {% include 'nav-bar.twig'%}
{% endblock %}
{% block body %}

<div class="c-modal-container">
  <a href="#modal" class="c-modal-btn">Add Personnel</a>
  <div id="modal" class="c-modal">
    <div class="c-modal-content">
      <a href="#" class="c-close">&times;</a>
      <h2 class="c-modal-title">Add Personnel</h2>
      <form class="c-form" method="post" action="/admin/personnels.php">
        <label for="name" class="c-modal-label-name">Name:</label>
        <input class="c-modal-input" type="text" id="name" name="name" required>
        <label for="position" class="c-modal-label-name">Position:</label>
        <input class="c-modal-input" type="text" id="position" name="position" required>
        <label for="project_name" class="c-modal-label-name">Project Name:</label>

        <select name="focal_person" class="c-modal-dropdown">
          {% for option in options %}
            <option value="{{ option }}">{{ option }}</option>
          {% endfor %}
        </select>
        <button class="c-modal-submit" type="submit">Add Personnel</button>
      </form>
    </div>
  </div>
</div>

<div class="c-modal-container">
  <div id="edit-modal" class="c-modal">
    <div class="c-modal-content">
      <a href="#" class="c-close">&times;</a>
      <h2 class="c-modal-title">Edit Personnel</h2>
      <form class="c-form" method="post" action="/admin/edit_personnel.php">
        <label for="edit-name" class="c-modal-label-name">Name:</label>
        <input class="c-modal-input" type="text" id="edit-name" name="name" required>
        <label for="edit-position" class="c-modal-label-name">Position:</label>
        <input class="c-modal-input" type="text" id="edit-position" name="position" required>
        <label for="edit-project-name" class="c-modal-label-name" id="edit-project">Project Name:</label>

        <select name="focal_person" class="c-modal-dropdown">
          {% for option in options %}
            <option value="{{ option }}">{{ option }}</option>
          {% endfor %}
        </select>
        <input type="hidden" name="id" id="edit-personnel-id" value="1">
        <button type="submit" class="c-modal-submit">Save Personnel</button>
      </form>
    </div>
  </div>
</div>

  <div class="container mt-5">
    <div class="col col-md-8 col-lg-6 table-responsive   mx-auto">
      <table class="table table-light border table-hover  table-striped ">
        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Assigned Project</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          {% for per in personnel %}
            <tr>
              <td data-label="Name">{{ per.name }}</td>
              <td data-label="Position">{{ per.position }}</td>
              <td data-label="Assigned Project">{{ per.project_name }}</td>
              <td data-label="Action">
                <div class="d-flex flex-no-wrap gap-1" >
                <a href="#edit-modal" onclick="setPersonnelId({{ per.personnel_id }})" class="btn btn-sm btn-primary"  >
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="tw-h-4 tw-w-4">
                    <path fill="#ffffff" d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
                  </svg>
                </a>
                <a href="/admin/delete_personnel.php?id={{ per.personnel_id }}" class="btn btn-sm btn-danger" >
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="tw-h-4 tw-w-4">
                    <path fill="#ffffff" d="M170.5 51.6L151.5 80h145l-19-28.4c-1.5-2.2-4-3.6-6.7-3.6H177.1c-2.7 0-5.2 1.3-6.7 3.6zm147-26.6L354.2 80H368h48 8c13.3 0 24 10.7 24 24s-10.7 24-24 24h-8V432c0 44.2-35.8 80-80 80H112c-44.2 0-80-35.8-80-80V128H24c-13.3 0-24-10.7-24-24S10.7 80 24 80h8H80 93.8l36.7-55.1C140.9 9.4 158.4 0 177.1 0h93.7c18.7 0 36.2 9.4 46.6 24.9zM80 128V432c0 17.7 14.3 32 32 32H336c17.7 0 32-14.3 32-32V128H80zm80 64V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16z" />
                  </svg>
                </a>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
<script>
  function setPersonnelId(personnel_id) {
    console.log('Personnel ID:', personnel_id);

    document.getElementById('edit-personnel-id').value = personnel_id;
  }
</script>
{% endblock %}
