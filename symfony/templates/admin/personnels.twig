{% extends 'base.twig' %}
{% block head %}
<title>ADMIN | Personnels</title>
{% endblock %}
{% block header %}
{% set current = 'job_orders' %}
{% include 'nav-bar.twig' %}
{% endblock %}
{% block body %}

<div
  class="modal fade"
  id="deleteConfirmationModal"
  tabindex="-1"
  aria-labelledby="deleteConfirmationLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteConfirmationLabel">Confirm Deletion</h5>
      </div>
      <div class="modal-body">Are you sure you want to delete this personnel?</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form
          :action="`{{ path('personnel_delete', {id : 'PLACEHOLDER'}) }}`.replace('PLACEHOLDER', id)"
          method="POST"
          x-data="{ id: 0 }"
          @delete.window="id = $event.target.dataset.deleteId"
        >
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger" id="confirmDelete">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="EditBackDrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Personnel</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form
        method="POST"
        x-data="{id: 0}"
        @edit.window="id = $event.target.dataset.editId"
        :action="`{{ path('personnel_edit', {id : 'PLACEHOLDER'}) }}`.replace('PLACEHOLDER', id)"
      >
        <input type="hidden" name="_method" value="PUT">
        <div class="modal-body">
          <label for="edit-name" class="form-label">Name: </label>
          <input
            type="text"
            class="form-control mb-3"
            aria-label="name"
            aria-describedby="addon-wrapping"
            id="edit-name"
            name="name"
          >
          <label for="edit-position" class="form-label">Position: </label>
          <input
            type="text"
            class="form-control mb-3"
            aria-label="position"
            aria-describedby="addon-wrapping"
            id="edit-position"
            name="position"
          >
          <select name="project_id" class="form-select" id="projects-input">
            {% for project in projects %}
              <option value="{{ project.id }}">{{ project.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="AddBackDrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Personnel</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form method="post" action="{{ path('personnels_add') }}">
        <div class="modal-body">
          <label for="name" class="form-label">Name: </label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control mb-3"
            aria-label="name"
            aria-describedby="addon-wrapping"
          >
          <label for="position" class="form-label">Position: </label>
          <input
            type="text"
            id="position"
            name="position"
            class="form-control mb-3"
            aria-label="position"
            aria-describedby="addon-wrapping"
          >
          <label for="project_name" class="form-label">Project Name: </label>
          <select name="project_id" class="form-select" id="projects-input">
            {% for project in projects %}
              <option value="{{ project.id }}">{{ project.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="col col-xxl-10 table-responsive mx-auto">
    <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#AddBackDrop">
      Add Personnel
    </button>

    <form action="personnels.php" method="GET" class="input-group">
      <input class="form-control form-control-sm" type="text" name="search_query" placeholder="Search...">
      <button
        type="submit"
        class="btn btn-sm btn-success"
      >
        Search
      </button>
    </form>
    <table class="table-light table-hover table-striped table border ">
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
          <th>Assigned Project</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        {% for per in personnel %}
          <tr>
            <td data-label="Name">{{ per.name }}</td>
            <td data-label="Position">{{ per.position }}</td>
            {% if per.project %}
              <td data-label="Assigned Project">{{ per.project.name }}</td>
            {% else %}
              <td data-label="Assigned Project">No Assigned Project</td>
            {% endif %}
            <td data-label="Action">
              <div class="d-flex flex-no-wrap gap-1">
                <button
                  x-data
                  data-edit-id="{{ per.id | e('html_attr') }}"
                  data-edit-name="{{ per.name | e('html_attr') }}"
                  data-edit-position="{{ per.position | e('html_attr') }}"
                  data-edit-project="{{ per.project.id | default(0) }}"
                  @click="$dispatch('edit')"
                  onclick="setPersonnelId({{ per.id }}, '{{ per.name }}', '{{ per.position }}', {{ per.project.id | default(0) }})"
                  class="btn btn-sm btn-primary"
                  data-bs-toggle="modal"
                  data-bs-target="#EditBackDrop"
                >
                  <i class="fa-solid fa-pen"></i>
                </button>
                <button
                  class="btn btn-sm btn-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteConfirmationModal"
                  data-delete-id="{{ per.id }}"
                  @click="$dispatch('delete')"
                  x-data
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
<script>
  function setPersonnelId(id, name, position, project_name) {
    document.getElementById('edit-name').value = name;
    document.getElementById('edit-position').value = position;
    document.getElementById('projects-input').value = project_name;
  }
</script>
{% endblock %}
