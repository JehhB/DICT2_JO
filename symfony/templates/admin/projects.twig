{% extends 'base.twig' %}
{% block head %}
<title>ADMIN | Projects</title>
<link rel="stylesheet" href="..\styles\projects.css">
{% endblock %}
{% block header %}
{% set current = 'projects' %}
{% include 'nav-bar.twig' %}
{% endblock %}
{% block body %}


<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteConfirmationLabel">Confirm Deletion</h5>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this project?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="EditBackDrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Project</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="post" action="/admin/edit_project.php" enctype="multipart/form-data">
        <div class="modal-body">
          <label for="name" class="form-label">Focal Person: </label>
          <select name="focal_person" class="form-select mb-3" id="focal-input">
            {% for option in options %}
              <option value="{{ option }}">{{ option }}</option>
            {% endfor %}
          </select>
          <label for="code" class="form-label">Short Code: </label>
          <input
            type="text"
            class="form-control mb-3"
            aria-label="code"
            aria-describedby="addon-wrapping"
            id="edit-project-code"
            name="code"
          >
          <label for="name" class="form-label">Project Name: </label>
          <input
            type="text"
            class="form-control mb-3"
            aria-label="name"
            aria-describedby="addon-wrapping"
            id="edit-project-name"
            name="name"
          >
          <label class="form-label" for="logo">Upload</label>
          <input type="file" class="form-control" id="edit-logo" name="logo">
        </div>
        <div class="modal-footer">
        <input type="hidden" name="id" id="edit-project-id" value="1">
          <button type="submit" class="btn btn-primary">Save Project</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="AddBackDrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Project</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="post" action="/admin/projects.php" enctype="multipart/form-data">
        <div class="modal-body">
          <label for="name" class="form-label">Focal Person: </label>
          <select name="focal_person" class="form-select mb-3">
            {% for option in options %}
              <option value="{{ option }}">{{ option }}</option>
            {% endfor %}
          </select>
          <label for="code" class="form-label">Short Code: </label>
          <input
            type="text"
            class="form-control mb-3"
            aria-label="code"
            aria-describedby="addon-wrapping"
            id="code"
            name="code"
          >
          <label for="name" class="form-label">Project Name: </label>
          <input
            type="text"
            class="form-control mb-3"
            aria-label="name"
            aria-describedby="addon-wrapping"
            id="name"
            name="name"
          >
          <label class="form-label" for="logo">Upload</label>
          <input type="file" class="form-control" id="logo" name="logo">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Add Project</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container  mt-5">
  <div class="col table-responsive mx-auto">
    <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#AddBackDrop">
      Add Project
    </button>
    <table class="table-light table-hover table-striped table  border ">
      <thead>
        <tr>
          <th>Short Code</th>
          <th>Project Name</th>
          <th>Icon</th>
          <th>Focal Person</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        {% for proj in project %}
          <tr>
            <td data-label="Short Code">{{ proj.code }}</td>
            <td data-label="Project Name">{{ proj.name }}</td>
            <td data-label="Icon">
              {% if proj.logo is not empty %}
                <img class="td-icon tw-h-6" src="{{ proj.logo }}" alt="icon" >
              {% else %}
                <img class="td-icon tw-h-6" src="/storage/default.png" alt="icon">
              {% endif %}
            </td>
            <td data-label="Focal Person">{{ proj.name }}</td>
            <td data-label="Action">
              <div class="d-flex flex-no-wrap gap-1">
                <a
                  href="#"
                  class="btn btn-sm btn-primary"
                  data-bs-toggle="modal"
                  data-bs-target="#EditBackDrop"
                  onclick="setProjectId({{ proj.id }}, '{{ proj.name }}', '{{ proj.code }}', '{{ proj.name }}', '{{ proj.logo }}')"
                >
                  <i class="fa-solid fa-pen tw-h-3 tw-w-3"></i>
                </a>
                <a href="#" class="btn btn-sm btn-danger"  data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal" onclick="setDeleteUrl('/admin/delete_project.php?id={{ proj.id }}');">
                  <i class="fa-solid fa-trash tw-h-3 tw-w-3"></i>
                </a>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

<script>
  function setProjectId(id, name, code, name, logo) {
    document.getElementById('edit-project-id').value = id;
    document.getElementById('focal-input').value = name;
    document.getElementById('edit-project-code').value = code;
    document.getElementById('edit-project-name').value = name;

    var img = document.getElementById('edit-logo');

    if (logo) {
      img.src = logo;
    } else {
      img.src = '/storage/default.png';
    }
  }
  let deleteUrl = '';

  function setDeleteUrl(url) {
    deleteUrl = url;
  }

  document.getElementById('confirmDelete').addEventListener('click', function() {
    window.location.href = deleteUrl;
  });
</script>

{% endblock %}
