{% set route = app.request.attributes.get('_route') %}
<nav class="navbar navbar-expand-md" style="background-color: {{ app.user.admin ? '#eb4c39' : '#3f5e8c'}}" data-bs-theme="dark">
  <div class="container">
    <a class="navbar-brand" href="#">
      <img src="/assets/logo.png" alt="Logo" class="d-inline-block align-text-center tw-w-14 tw-h-14 rounded-circle">
      DICT
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% if app.user.admin %}
        <li class="nav-item">
          <a 
          class="nav-link{% if route == 'admin_joborders' %} active" aria-current="page{%endif%}"
          href="{{ path('admin_joborders') }}">Job Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link{% if route == 'activities_idnex' %} active" aria-current="page{%endif%}" href="{{ path('activities_index') }}">Activities</a>
        </li>
        <li class="nav-item">
          <a class="nav-link{% if route == 'admin_accounts' %} active" aria-current="page{%endif%}" href="#">Accounts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link{% if route == 'admin_projects' %} active" aria-current="page{%endif%}" href="{{ path('admin_projects') }}">Projects</a>
        </li>
        <li class="nav-item mr-5">
          <a class="nav-link{% if route == 'personnels_index' %} active" aria-current="page{%endif%}" href="{{ path('personnels_index') }}">Personnels</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link{% if route == 'dashboard_user' %} active" aria-current="page{%endif%}" href="{{ path('dashboard_user') }}">Dashboards</a>
        </li>
        {% endif %}
      </ul>
      <div class="d-flex">
        <a href="{{ path('app_logout') }}" class="btn btn-secondary align-self-center">Logout</a>
      </div>
    </div>
  </div>
</nav>
