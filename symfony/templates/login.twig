{% extends 'base.twig' %}
{% block title %} DICT JO - Log in {% endblock %}
{% block body %}
<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="card tw-w-100 shadow-lg mb-5 bg-body tw-p-5" style="max-width: 800px;">
    <div class="row g-0">
      <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
        <img src="{{ asset('images/logo.png') }}" class="img-fluid p-5" alt="Logo">
      </div>
      <div class="col-12 col-md-6">
        <div class="card-body p-4">
          <h2 class="card-title text-center pb-3">Job Order System</h2>

          <div class="row px-2 mb-2">
            {% for message in app.flashes('error') %}
              <strong class="col-12 alert alert-danger m-0">{{ message }}</strong>
            {% endfor %}
          </div>

          <form method="post" class="d-flex flex-column">
            <div class="row px-2 mb-2">
              {% if error %}
                <div class="alert alert-danger col-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
            </div>

            <label for="username" class="form-label">Email</label>
            <input
              type="email"
              value="{{ last_username }}"
              name="_username"
              id="username"
              class="form-control border border-black p-2 mb-3"
              autocomplete="email"
              required
              autofocus
            >

            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              name="_password"
              id="password"
              class="form-control border border-black p-2 mb-3"
              autocomplete="current-password"
              required
            >

            <input
              type="hidden"
              name="_csrf_token"
              value="{{ csrf_token('authenticate') }}"
            >

            <div class="form-check mb-3">
              <input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
              <label class="form-check-label" for="_remember_me">Remember me</label>
            </div>

            <button class="btn btn-primary align-self-center px-4" type="submit">Sign in</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
